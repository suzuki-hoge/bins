#!/bin/zsh

build_dir=$(cd "$(dirname "${0}")" && git rev-parse --show-toplevel)/target/release
bin="$build_dir/diff-filter"

if [ $# -eq 1 ]; then
  if [ "$1" = "-h" ]; then
    eval "$bin -h"
    exit 0
  fi
fi

eval "$(($bin "${@}") 2> >(stderr=$(cat);typeset -p stderr) > >(stdout=$(cat);typeset -p stdout))"

if [ -n "$stdout" ]; then
  for line in $stdout; do
    eval "$line"
  done
else
  echo $stderr
fi
